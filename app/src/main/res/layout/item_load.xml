<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvLoadType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Load Type: "
        android:textAppearance="?android:textAppearanceMedium" />

    <TextView
        android:id="@+id/tvMagnitude"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Magnitude: "
        android:textAppearance="?android:textAppearanceMedium" />

    <TextView
        android:id="@+id/tvPosition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Position: "
        android:textAppearance="?android:textAppearanceMedium" />

    <TextView
        android:id="@+id/tvPositionRange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Position Range: "
        android:textAppearance="?android:textAppearanceMedium" />



    <TextView
        android:id="@+id/tvPointLoadVDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Details for Point Load V"
        android:textAppearance="?android:textAppearanceMedium"
        android:visibility="gone" />


    <!-- PointTorque -->
    <TextView
        android:id="@+id/tvPointTorqueDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Details for Point Torque"
        android:textAppearance="?android:textAppearanceMedium"
        android:visibility="gone" />

    <!-- DistributedLoadV -->
    <TextView
        android:id="@+id/tvDistributedLoadVDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Details for Distributed Load V"
        android:textAppearance="?android:textAppearanceMedium"
        android:visibility="gone" />

</LinearLayout>
