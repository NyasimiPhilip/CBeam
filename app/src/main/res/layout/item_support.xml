<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="support"
            type="com.android.cbeam.model.Support" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="70dp"
        android:paddingRight="70dp"
        android:paddingBottom="5dp">

        <TextView
            android:id="@+id/tvPosition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:fontFamily="@font/sourcesansprosemibold"
            android:text="@{String.format(&quot;Position: %.2f&quot;, support.position)}" />

        <TextView
            android:id="@+id/tvSupportType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:fontFamily="@font/sourcesansprosemibold"
            android:text="@{support.supportTypeText}" />

    </LinearLayout>
</layout>
